<%= form_for(@link, :html=>{:class=> "form-inline"}) do |f| %>
  <div class="input-group">
    <% if @link.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@link.errors.count, "error") %> prohibited this @link from being saved:</h2>

        <ul>
        <% @link.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    </div>
    <% end %>

    <div class="field">
      <div class="input-group"> 
        <%= f.text_field :full_url, placeholder: "Paste your link here", class: 'form-control', size: "50" %>
      

        <div class="input-group-btn">
          <%= f.submit "Shorten", class: "btn btn-danger" %>
        </div>
      </div>
    </div>
<% end %>
</div>

 <% if notice %>
    <div id="notice_wrapper">
        <p class="notice"><%= notice %></p>
    </div>
  <% elsif alert %>
      <div id="notice_wrapper">
          <p class="alert"><%= alert %></p>    
      </div>
  <% end %>
<!-- <p id="notice"><%= notice %></p> -->
<% shortened_url = "https://mini-u.herokuapp.com/#{@link.short_url}" %>


<script>
  $(document).ready(function() {
      setTimeout(function() {
          $('#notice_wrapper').fadeOut("slow", function() {
              $(this).remove();
          });
      }, 4500);
  });
</script>