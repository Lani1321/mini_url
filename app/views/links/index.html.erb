<div class="leaderboard">
  <h1>Top 100</h1>
</div>

<table>
  <thead>
    <tr>
      <th>Full url</th>
      <th>Short url</th>
      <th>Clicks</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @links.each do |link| %>
      <% shortened_url = "https://mini-u.herokuapp.com/#{link.short_url}" %>
      
      <tr>
        <td><%= link.full_url %></td>
        <td><%= link_to shortened_url, shortened_url, target: "blank" %></td>
        <td><%= link.clicks %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

