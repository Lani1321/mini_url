<p id="notice"><%= notice %></p>

<h3>Shorten your URLs!</h3>

<%= form_for(@link) do |f| %>
  <% if @link.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@link.errors.count, "error") %> prohibited this @link from being saved:</h2>

      <ul>
      <% @link.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :full_url %>
    <%= f.text_field :full_url %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<h1>Top 100</h1>

<table>
  <thead>
    <tr>
      <th>Full url</th>
      <th>Short url</th>
      <th>Clicks</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  

    <% @links.each do |link| %>
      <% shortened_url = "http://localhost:3000/#{link.short_url}" %>
      
      <tr>
        <td><%= link.full_url %></td>
        <td><%= link_to shortened_url, shortened_url, target: "blank" %></td>
        <td><%= link.clicks %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Link', new_link_path %>

