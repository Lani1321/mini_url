<div class="container">
  <div class="leaderboard-title">
    <h1>Top 100</h1>
  </div>

  <div class="row">
    <div class="col-xs-12 leaderboard-table">
      <table class="table-bordered" style="margin-left:-40px">
        <thead>
          <tr>
            <th style="padding: 15px">Rank</th>
            <th style="padding: 15px">Full URL</th>
            <th style="padding: 15px">Short URL</th>
            <th style="padding: 15px">Amount Visited</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        
        <tbody>
          <% @links.each_with_index do |link, i| %>
            <% shortened_url = "https://mini-u.herokuapp.com/#{link.short_url}" %>
            <tr>   
              <td class="text-center"><%= (i+1) %></td>
              <td style="padding-left: 10px"><%= link.full_url %></td>
              <td style="padding: 10px"><%= link_to shortened_url, shortened_url, target: "blank" %></td>
              <td class="text-center"><%= link.clicks %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>  
